<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Hello [% session.user %]!</title>
  <link rel=stylesheet type=text/css href="[% css_url %]">
</head>
<body class="strain">
    <script type="text/javascript"><!-- hide from old browsers
        //-->
        <!--
        function clickMeEvent(obj)
        {
            if (obj.innerHTML.match(/Sabotage/))
            {
                obj.innerHTML='<a style="background-color:green;cursor: pointer;">Revive<a>-><del>Strain Name: [% entries.Name %]</del><input id="Obsolete" name="Obsolete" type="hidden" value="1" />';
            }
            else if (obj.innerHTML.match(/Revive/))
            {
                obj.innerHTML='<a style="background-color:#D94A38;cursor: pointer;">Sabotage<a>-><b>Strain Name: [% entries.Name %]</b><input id="Obsolete" name="Obsolete" type="hidden" value="0" />';
            }
            else
            {
                obj.innerHTML="Errrr, What just happened?";
            }
        }
    //-->
        </script>
    <noscript><font color="#cc0000"><b>Please enable Javascript or use a newer browser.</b></font></noscript>
    <h1 class="plasmid">ID:CFS_S[% entries.ID %]</h1>
    
    
    <p>Fields that are <b>highlighted</b> are required.</p>
    
    <!-- Generated by CGI::FormBuilder v3.09 available from www.formbuilder.org -->
    <form action="edited" id="strain_edit" method="post" >
        <div><input id="_submitted" name="_submitted" type="hidden" value="1" /></div>
        <table>
            
            
            <tr valign="top">
                <td>
                    <div onclick="clickMeEvent(this)">
                        [% IF entries.Obsolete == 1 %]
                        <a style="background-color:green;cursor: pointer;">Revive<a>-><del>Strain Name: [% entries.Name %]</del><input id="Obsolete" name="Obsolete" type="hidden" value="1" />
                            [% ELSE %]
                            <a style="background-color:#D94A38;cursor: pointer;">Sabotage<a>-><b>Strain Name: [% entries.Name %]</b><input id="Obsolete" name="Obsolete" type="hidden" value="0" />
                                [% END %]
                    </div>
                </td>
                <td></td>
                <td>Other names</td>
                <td><input name="Other_names" type="text" value="[% entries.Other_names %]" /></td>
                
            </tr>
            
            <tr valign="top">
                <td>Species</td>
                <td><input id="Species" name="Species" type="text" value="[% entries.Species %]" /></td>
                <td>Temperature</td>
                <td><input id="Temperature" name="Temperature" type="text" value="[% entries.Temperature %]" /></td>
            </tr>
            <tr>
                <td><br></td>
            </tr>
            <tr valign="top">
                <td>Isolated from</td>
                <td><input name="Isolated_from" type="text" value="[% entries.Isolated_from %]" /></td>
                <td>Geo location</td>
                <td><input name="Geographic_location" type="text" value="[% entries.Geographic_location %]" /></td>
            </tr>
            <tr>
                <td><br></td>
            </tr>
            
            <tr valign="top">
                <td>Keeper</td>
                <td><input id="Keeper" name="Keeper" type="text" value="[% entries.Keeper %]" /></td>
                <td>Constructor</td>
                <td><input id="Constructor" name="Constructor" type="text" value="[% entries.Constructor %]" /></td>
            </tr>
            <tr valign="top">
                <td>Location</td>
                <td><input id="Location" name="Location" type="text" value="[% entries.Location %]" /></td>
                <td>Arrival Time</td>
                <td><input id="Arrival_time" name="Arrival_time" type="date" value="[% entries.Arrival_time %]"/></td>
            </tr>
            <tr>
                <td><br></td>
            </tr>
            <tr valign="top">
                <td>Parent</td>
                <td><input id="Parent" name="Parent" type="text" value="[% entries.Parent %]" /></td>
            </tr>
            <tr valign="top">
                <td>Plasmids </td>
                
                <td><input id="Plasmids" name="Plasmids" type="text" value="[% entries.Plasmids %]"/><td>
            </tr>
            
            <tr>
                <td><br></td>
            </tr>
            
            
            <tr valign="top">
                <td>Genotype </td>
                
                <td><textarea id="Genotype" name="Genotype" form="strain_edit">[% entries.Genotype %]</textarea></td>
            </tr>
            <tr valign="top">
                <td>Resistance</td>
                <td><textarea id="Resistance" name="Resistance" form="strain_edit">[% entries.Resistance %]</textarea></td>
            </tr>
            
            <tr>
                <td><br></td>
            </tr>
            
            <tr valign="top">
                <td>Reference</td>
                <td><textarea id="Reference" name="Reference" form="strain_edit">[% entries.Reference %]</textarea></td>
            </tr>
            <tr valign="top">
                <td>Construction</td>
                <td><textarea id="Construction" name="Construction" form="strain_edit">[% entries.Construction %]</textarea></td>
            </tr>
            <tr valign="top">
                <td>Comments</td>
                <td><textarea id="Comments" name="Comments" form="strain_edit">[% entries.Comments %]</textarea></td>
            </tr>
            
            
            <tr valign="top">
                <td align="center" colspan="2"><input id="_submit" name="_submit" type="submit" value="Submit" /></td>
            </tr>
        </table>
    </form>


</body>
</html>