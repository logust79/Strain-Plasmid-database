<script type="text/javascript"><!-- hide from old browsers
function validate (form) {
    var alertstr = '';
    var invalid  = 0;
    var invalid_fields = new Array();

    // ID: standard text, hidden, password, or textarea box

    // New_keeper: standard text, hidden, password, or textarea box
    var New_keeper = form.elements['New_keeper'].value;
    if (New_keeper == null) {
        alertstr += '- Invalid entry for the "New_keeper" field\n';
        invalid++;
        invalid_fields.push('New_keeper');
    }
    if (invalid > 0 || alertstr != '') {
        if (! invalid) invalid = 'The following';   // catch for programmer error
        alert(''+invalid+' error(s) were encountered with your submission:'+'\n\n'
                +alertstr+'\n'+'Please correct these fields and try again.');
        return false;
    }
    return true;  // all checked ok
}

//-->
</script>
